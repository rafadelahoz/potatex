<?xml version="1.0" encoding="utf-8" ?>
<scrollview width="100%" height="100%">
    <vbox width="100%">
        <vbox width="100%">
            <box width="100%" columns="3">
                <text text="Tema 1" id="txtLessonHeader" horizontalAlign="center"/>
                <button id="btnExit" text="Salir" width="15" horizontalAlign="right"/>
            </box>
            <divider/>
            <box columns="3" width="100%" style="padding: 5%;">
                <button id="btnPrevQuestion" text="<" height="15" horizontalAlign="left"/>
                <button id="btnFinish" text="Corregir" horizontalAlign="center"/>
                <button id="btnNextQuestion" text=">" height="15" horizontalAlign="right"/>
            </box>
        </vbox>
        <vbox width="100%">
            <text text="Pregunta 1. ¿Qué pasa?" id="txtQuestion" width="100%"/>
            <hbox x="5%" width="90%">
                <button text="A." id="btnA1"/>
                <text text="Sí" id="txtA1" width="100%"/>
            </hbox>
            <hbox x="5%" width="90%">
                <button text="B." id="btnA2"/>
                <text text="Quizás" id="txtA2" width="100%"/>
            </hbox>
            <hbox x="5%" width="90%">
                <button text="C." id="btnA3"/>
                <text text="No" id="txtA3" width="100%"/>
            </hbox>
            <hbox x="5%" width="90%">
                <button text="D." id="btnA4"/>
                <text text="¿Qué?" id="txtA4" width="100%"/>
            </hbox>
    	</vbox>
        <vbox verticalAlign="bottom" width="100%" height="20%" style="backgroundColor: 0x98b598">
            <divider />
            <continuousHBox id="directNavPanel" autoSize="true">
            </continuousHBox>
        </vbox>
    </vbox>
</scrollview>
