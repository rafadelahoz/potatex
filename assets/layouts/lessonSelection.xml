<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <box width="100%" columns="3">
        <text text="Test a medida: configuración" style="fontBold: true"/>
        <button id="btnExit" text="Volver al menú" horizontalAlign="right"/>
    </box>
    <divider/>
    <accordion id="accordion" width="100%" height="100%" paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">
        <continuousVBox text="Temas" width="100%" height="100%" id="lessonList">
            <button id="btnSelectAll" text="Seleccionar todos"/>
            <button id="btnSelectNone" text="Limpiar selección"/>
            <button id="btnSelectRandom" text="Aleatorio"/>
        </continuousVBox>
        <grid text="Configuración" columns="2">
            <text text="Número de preguntas: " />
            <textinput id="txtNumberOfQuestions" text="25" />
            <checkbox id="checkOnlyReal" text="Sólo preguntas reales"/>
            <checkbox id="checkOnlyAnswered" text="Sólo preguntas con respuesta"/>
            <spacer/>
            <checkbox id="checkAutomaticCorrection" text="Corregir al responder"/>
        </grid>
    </accordion>
    <box columns="3" width="100%">
        <button id="btnStart" text="Comenzar" horizontalAlign="center"/>
    </box>
</vbox>
