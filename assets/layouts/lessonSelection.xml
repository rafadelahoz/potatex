<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%" height="100%">
    <box width="100%" columns="3">
        <text text="Configura tu test"/>
        <button id="btnExit" text="Volver al menú" horizontalAlign="right"/>
    </box>
    <divider/>
    <accordion width="100%" height="100%" paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">
        <continuousVBox text="Temas" width="100%" height="100%" id="lessonList">
        </continuousVBox>
        <grid text="Configuración" columns="2">
            <text text="Número de preguntas: " />
            <textinput id="txtNumberOfQuestions" text="25" />
            <checkbox id="checkAutomaticCorrection" text="Corregir al responder"/>
        </grid>
    </accordion>
    <box columns="3" width="100%">
        <button id="btnStart" text="Comenzar" horizontalAlign="center"/>
    </box>
</vbox>
